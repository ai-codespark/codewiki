# syntax=docker/dockerfile:1-labs

# Build argument for custom certificates directory
ARG CUSTOM_CERT_DIR="certs"

FROM node:20-alpine3.22 AS node_base

FROM node_base AS node_deps
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm ci --legacy-peer-deps

FROM node_base AS node_builder
WORKDIR /app
COPY --from=node_deps /app/node_modules ./node_modules
# Copy only necessary files for Next.js build
COPY package.json package-lock.json next.config.ts tsconfig.json tailwind.config.js postcss.config.mjs ./
COPY src/ ./src/
COPY public/ ./public/
# Increase Node.js memory limit for build and disable telemetry
ENV NODE_OPTIONS="--max-old-space-size=4096"
ENV NEXT_TELEMETRY_DISABLED=1
RUN NODE_ENV=production npm run build

FROM python:3.11-slim AS py_deps
WORKDIR /api

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip and setuptools
RUN python -m pip install --upgrade pip setuptools wheel --no-cache-dir

COPY api/pyproject.toml .
COPY api/poetry.lock .
RUN python -m pip install poetry==2.0.1 --no-cache-dir && \
    poetry config virtualenvs.create true --local && \
    poetry config virtualenvs.in-project true --local && \
    poetry config virtualenvs.options.always-copy --local true && \
    POETRY_MAX_WORKERS=10 poetry install --no-interaction --no-ansi --only main && \
    poetry cache clear pypi --all || true

# Use Python 3.11 as final image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install Node.js and npm
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    git \
    ca-certificates \
    && mkdir -p /etc/apt/keyrings \
    && curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg \
    && echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_20.x nodistro main" | tee /etc/apt/sources.list.d/nodesource.list \
    && apt-get update \
    && apt-get install -y nodejs \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Update certificates if custom ones were provided and copied successfully
RUN if [ -n "${CUSTOM_CERT_DIR}" ]; then \
        mkdir -p /usr/local/share/ca-certificates && \
        if [ -d "${CUSTOM_CERT_DIR}" ]; then \
            cp -r ${CUSTOM_CERT_DIR}/* /usr/local/share/ca-certificates/ 2>/dev/null || true; \
            update-ca-certificates; \
            echo "Custom certificates installed successfully."; \
        else \
            echo "Warning: ${CUSTOM_CERT_DIR} not found. Skipping certificate installation."; \
        fi \
    fi

ENV PATH="/opt/venv/bin:$PATH"

# Copy Python dependencies
COPY --from=py_deps /api/.venv /opt/venv
COPY api/ ./api/

# Copy Node app
COPY --from=node_builder /app/public ./public
COPY --from=node_builder /app/.next/standalone ./
COPY --from=node_builder /app/.next/static ./.next/static

# Expose the port the app runs on
EXPOSE ${PORT:-8001} 3000

# Create a script to run both backend and frontend
RUN echo '#!/bin/bash\n\
# Load environment variables from .env file if it exists\n\
if [ -f .env ]; then\n\
  export $(grep -v "^#" .env | xargs -r)\n\
fi\n\
\n\
# Check for environment variables and provide helpful information\n\
echo "=== DeepWiki Environment Check ==="\n\
\n\
# Core API keys (at least one provider should be configured)\n\
if [ -z "$OPENAI_API_KEY" ] && [ -z "$GOOGLE_API_KEY" ] && [ -z "$OPENROUTER_API_KEY" ] && [ -z "$LITELLM_API_KEY" ] && [ -z "$AZURE_OPENAI_API_KEY" ]; then\n\
  echo "Warning: No API keys detected. At least one provider API key is recommended:"\n\
  echo "  - OPENAI_API_KEY (for OpenAI models and embeddings)"\n\
  echo "  - GOOGLE_API_KEY (for Google Gemini models)"\n\
  echo "  - OPENROUTER_API_KEY (for OpenRouter models)"\n\
  echo "  - LITELLM_API_KEY + LITELLM_BASE_URL (for LiteLLM proxy models)"\n\
  echo "  - AZURE_OPENAI_API_KEY + AZURE_OPENAI_ENDPOINT + AZURE_OPENAI_VERSION (for Azure OpenAI models)"\n\
fi\n\
\n\
# Check LiteLLM configuration\n\
if [ -n "$LITELLM_API_KEY" ] && [ -z "$LITELLM_BASE_URL" ]; then\n\
  echo "Warning: LITELLM_API_KEY is set but LITELLM_BASE_URL is missing."\n\
  echo "  LiteLLM requires both LITELLM_API_KEY and LITELLM_BASE_URL (e.g., http://localhost:4000)"\n\
fi\n\
if [ -z "$LITELLM_API_KEY" ] && [ -n "$LITELLM_BASE_URL" ]; then\n\
  echo "Warning: LITELLM_BASE_URL is set but LITELLM_API_KEY is missing."\n\
  echo "  LiteLLM requires both LITELLM_API_KEY and LITELLM_BASE_URL"\n\
fi\n\
\n\
# Check Azure OpenAI configuration\n\
if [ -n "$AZURE_OPENAI_API_KEY" ]; then\n\
  if [ -z "$AZURE_OPENAI_ENDPOINT" ] || [ -z "$AZURE_OPENAI_VERSION" ]; then\n\
    echo "Warning: AZURE_OPENAI_API_KEY is set but AZURE_OPENAI_ENDPOINT and/or AZURE_OPENAI_VERSION are missing."\n\
    echo "  Azure OpenAI requires all three: AZURE_OPENAI_API_KEY, AZURE_OPENAI_ENDPOINT, and AZURE_OPENAI_VERSION"\n\
  fi\n\
fi\n\
if [ -z "$AZURE_OPENAI_API_KEY" ] && ([ -n "$AZURE_OPENAI_ENDPOINT" ] || [ -n "$AZURE_OPENAI_VERSION" ]); then\n\
  echo "Warning: Azure OpenAI endpoint/version is set but AZURE_OPENAI_API_KEY is missing."\n\
  echo "  Azure OpenAI requires all three: AZURE_OPENAI_API_KEY, AZURE_OPENAI_ENDPOINT, and AZURE_OPENAI_VERSION"\n\
fi\n\
\n\
# Optional configuration info\n\
if [ -n "$OLLAMA_HOST" ]; then\n\
  echo "Info: OLLAMA_HOST is set to $OLLAMA_HOST"\n\
fi\n\
if [ -n "$OPENAI_BASE_URL" ]; then\n\
  echo "Info: OPENAI_BASE_URL is set to $OPENAI_BASE_URL"\n\
fi\n\
\n\
echo "=== Starting DeepWiki ==="\n\
\n\
# Start the API server in the background with the configured port\n\
python -m api.main --port ${PORT:-8001} &\n\
PORT=3000 HOSTNAME=0.0.0.0 node server.js &\n\
wait -n\n\
exit $?' > /app/start.sh && chmod +x /app/start.sh

# Set environment variables
ENV PORT=8001
ENV NODE_ENV=production
ENV SERVER_BASE_URL=http://localhost:${PORT:-8001}

# Create empty .env file (will be overridden if one exists at runtime)
RUN touch .env

# Command to run the application
CMD ["/app/start.sh"]
